{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container mt-3">
    <div class="row">
        <div class="col">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('category_index') }}">Home</a></li>
                <li class="breadcrumb-item active">show Categories</li>
            </ol>
        </div>
    </div>
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row" style="display: flex;justify-content: space-evenly;">

        <a href="{{ path('category_index') }}"><<< back to list</a>

        <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>

        {{ include('category/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
