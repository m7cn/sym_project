{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
<div class="container mt-3">
    <div class="row">
        <div class="col">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('product_index') }}">Home</a></li>
                <li class="breadcrumb-item active">show product</li>
            </ol>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name|capitalize }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ "%s $"|format(product.price) }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description | raw}}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_USER') %}

        <form method="post" action="{{ path('product_edit', {'id': product.id}) }}">
            <button class="btn btn-primary">edit</button>
        </form>

        {#<a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>#}

        {{ include('product/_delete_form.html.twig') }}
    {% endif %}
    <a href="{{ path('product_index') }}"><< back to list</a>
</div>
{% endblock %}
