{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('product_index') }}">Home</a></li>
        <li class="breadcrumb-item active">show product</li>
    </ol>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name|capitalize }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ "%s $"|format(product.price) }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description | raw}}</td>
            </tr>
        </tbody>
    </table>



    <form method="post" action="{{ path('product_edit', {'id': product.id}) }}">
        <button class="btn btn-primary">edit</button>
    </form>

    {#<a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>#}

    {{ include('product/_delete_form.html.twig') }}

    <a href="{{ path('product_index') }}">back to list</a>
{% endblock %}
