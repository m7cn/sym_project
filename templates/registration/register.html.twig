{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email,{attr:{placeholder:'Email'}}) }}
        {{ form_row(registrationForm.password,{attr:{placeholder:'Password'}}) }}
        {{ form_row(registrationForm.confirmPassword,{attr:{placeholder:'confirm Password'}}) }}
        {{ form_row(registrationForm.roles) }}

        <button class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
