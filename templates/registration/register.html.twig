{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container mt-3">
    <div class="row">
        <div class="col">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('product_index') }}">Home</a></li>
                <li class="breadcrumb-item active">Register</li>
            </ol>
        </div>
    </div>
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email,{attr:{placeholder:'Email'}}) }}
        {{ form_row(registrationForm.password,{attr:{placeholder:'Password'}}) }}
        {{ form_row(registrationForm.confirmPassword,{attr:{placeholder:'confirm Password'}}) }}
        {{ form_row(registrationForm.roles) }}

        <button class="btn btn-primary">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
